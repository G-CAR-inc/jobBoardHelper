generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  publicIp String @map("public_ip")
  sdkUsage Int    @map("sdk_usage")

  accessToken  String @map("access_token")
  refreshToken String @map("refresh_token")

  userEmail String? @map("user_email")

  // 1:m Relations
  cookies Cookie[]

  @@map("sessions")
}

model Cookie {
  id       String   @id @default(uuid())
  key      String
  domain   String
  path     String   @default("/")
  secure   Boolean  @default(true)
  httpOnly Boolean  @default(true) @map("http_only")
  maxAge   Int?     @map("max_age")
  creation DateTime
  value    String

  // Relation to Session
  sessionId Int     @map("session_id")
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("cookies")
}

model JobListing {
  id          String  @id // Dubizzle UUID
  legacyId    Int?    @map("legacy_id")
  name        String
  description String?
  companyName String? @map("company_name")
  status      String

  // Normalized Data Fields
  salary         String?
  location       String?
  industry       String?
  employmentType String? @map("employment_type")
  educationLevel String? @map("education_level")
  workExperience String? @map("work_experience")

  lastApplicationDate DateTime? @map("last_application_date")

  postedAt  DateTime @map("posted_at")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  applications JobApplication[]

  @@map("job_listings")
}

model Applicant {
  id        String  @id // Dubizzle Applicant ID
  firstName String  @map("first_name")
  lastName  String  @map("last_name")
  email     String?
  phone     String?
  age       Int?

  // Profile Details
  nationality       String?
  country           String?
  currentPosition   String? @map("current_position")
  currentCompany    String? @map("current_company")
  educationLevel    String? @map("education_level")
  totalExperience   String? @map("total_experience")
  salaryExpectation String? @map("salary_expectation")
  visaStatus        String? @map("visa_status")

  cvUrl    String? @map("cv_url")
  photoUrl String? @map("photo_url")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  applications JobApplication[]
  // Optional: Unique index on email if IDs aren't consistent, 
  // but usually Dubizzle IDs are safer for external refs

  @@map("applicants")
}

model JobApplication {
  id String @id // Dubizzle Application ID

  jobId String     @map("job_id")
  job   JobListing @relation(fields: [jobId], references: [id])

  applicantId String    @map("applicant_id")
  applicant   Applicant @relation(fields: [applicantId], references: [id])

  relevancyScore Float? @map("relevancy_score")

  appliedAt   DateTime @map("applied_at") // The created_at from source
  dbCreatedAt DateTime @default(now()) @map("db_created_at")

  analysis ApplicationAnalysis?

  @@unique([jobId, applicantId]) // Prevent duplicate applications
  @@map("job_applications")
}
model ApplicationAnalysis {
  id            Int            @id @default(autoincrement())
  applicationId String         @unique @map("application_id")
  application   JobApplication @relation(fields: [applicationId], references: [id])
  
  // 1. Verdict Flags
  ageVerdict           Boolean @map("age_verdict")
  driverLicenseVerdict Boolean @map("driver_license_verdict")
  residenceVerdict     Boolean @map("residence_verdict")
  visaVerdict          Boolean @map("visa_verdict")
  
  // 2. Extracted Data
  estimatedAge         Int?    @map("estimated_age")
  visaStatus           String? @map("visa_status") 
  
  // 3. Reasoning
  ageReason            String? @map("age_reason")
  driverLicenseReason  String? @map("driver_license_reason")
  residenceReason      String? @map("residence_reason")
  visaReason           String? @map("visa_reason")

  // 4. Token Usage 
  totalTokens          Int?    @map("total_tokens")

  // 5. Original Source
  rawResponse          Json    @map("raw_response")
  createdAt            DateTime @default(now()) @map("created_at")

  @@map("application_analyses")
}